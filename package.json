{
  "name": "crossing-tasks",
  "description": "",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Mikhail Bodrov <connormiha1@gmail.com>",
  "engines": {
    "node": ">=6.6.0",
    "npm": ">=3.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/Connormiha/crossing-tasks.git"
  },
  "scripts": {
    "build": "rm -fr build && NODE_ENV=production webpack",
    "lint": "gulp lint",
    "postinstall": "typings install",
    "start": "webpack-dev-server",
    "coverage": "jest --coverage",
    "test": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "styl",
      "css"
    ],
    "transform": {
      ".*": "<rootDir>/__tests__/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.spec\\.(ts|tsx)$",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "notify": true,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFiles": [
      "<rootDir>/__tests__/setup.ts"
    ]
  },
  "devDependencies": {
    "autoprefixer": "6.5.3",
    "bem-cn": "2.1.3",
    "css-loader": "0.26.1",
    "csso": "2.3.0",
    "csso-loader": "0.2.0",
    "enzyme": "2.6.0",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.9.0",
    "ghooks": "1.3.2",
    "gulp": "3.9.1",
    "gulp-stylint": "4.0.0",
    "gulp-tslint": "7.0.1",
    "html-webpack-plugin": "2.24.1",
    "jest-cli": "17.0.3",
    "json-loader": "0.5.4",
    "lodash": "4.17.2",
    "postcss": "5.2.6",
    "poststylus": "0.2.3",
    "react": "15.4.1",
    "react-addons-test-utils": "15.4.1",
    "react-dom": "15.4.1",
    "react-redux": "4.4.6",
    "react-router": "3.0.0",
    "react-test-renderer": "15.4.1",
    "redux": "3.6.0",
    "redux-batched-actions": "0.1.4",
    "redux-devtools-extension": "1.0.0",
    "redux-thunk": "2.1.0",
    "seamless-immutable": "6.3.0",
    "style-loader": "0.13.1",
    "stylus": "0.54.5",
    "stylus-loader": "2.4.0",
    "ts-loader": "1.2.2",
    "tslint": "4.0.2",
    "tslint-loader": "3.3.0",
    "tslint-react": "2.0.0",
    "typed-css-modules": "0.1.13",
    "typed-css-modules-loader": "0.0.4",
    "typescript": "2.0.10",
    "typings": "2.0.0",
    "webpack": "1.13.3",
    "webpack-dev-server": "1.16.2",
    "webpack-sources": "0.1.3"
  },
  "config": {
    "ghooks": {
      "pre-commit": "NODE_ENV=pre_commit npm run lint",
      "pre-push": "npm test"
    }
  }
}
