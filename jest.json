{
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "json",
    "styl",
    "css"
  ],
  "transform": {
    ".+\\.(ts|tsx)$": "<rootDir>/__tests__/preprocessor-typescript.js",
    ".+\\.(css|styl)$": "<rootDir>/node_modules/jest-css-modules-transform"
  },
  "testRegex": "/__tests__/.*\\.spec\\.(ts|tsx)$",
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "bail": true,
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/**/*.d.ts"
  ],
  "setupFiles": [
    "<rootDir>/__tests__/setup.ts"
  ]
}
